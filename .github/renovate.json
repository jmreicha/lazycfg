{
  "extends": ["config:base", "helpers:pinGitHubActionDigests"],
  "packageRules": [
    {
      "managers": ["gomod"],
      "groupName": "go dependencies",
      "schedule": ["before 3:00am"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "pr",
      "minimumReleaseAge": "14 days"
    },
    {
      "groupName": "pre-commit",
      "automerge": true,
      "automergeType": "branch",
      "automergeSchedule": ["before 3:00am"],
      "managers": ["pre-commit"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "minimumReleaseAge": "14 days"
    },
    {
      "groupName": "github actions",
      "automerge": true,
      "automergeType": "pr",
      "managers": ["github-actions"],
      "matchUpdateTypes": ["digest", "pin"],
      "minimumReleaseAge": "14 days"
    }
  ],
  "labels": ["dependencies"],
  "prConcurrentLimit": 5,
  "regexManagers": [
    {
      "fileMatch": ["^\\.common-repo\\.yaml$"],
      "matchStrings": [
        "url: https://github\\.com/(?<depName>[^\\s]+)\\n\\s*ref: (?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "pre-commit": {
    "enabled": true
  },
  "recreateClosed": true,
  "vulnerabilityAlerts": {
    "labels": ["security"]
  }
}
